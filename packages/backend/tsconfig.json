{
  "include": ["**/*.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"],

      "@db": ["db/index.ts"],
      "@db/*": ["db/*"],

      "@plugins": ["plugins/index.ts"],
      "@plugins/*": ["plugins/*"]
    }
  }
}
