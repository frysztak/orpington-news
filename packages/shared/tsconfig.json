{
  "include": ["src/**/*.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declarationMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
