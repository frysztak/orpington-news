{
  "apps": [
    {
      "name": "web",
      "cwd": "/app/packages/frontend/",
      "script": "server.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "error_file": "/var/log/web/error.log",
      "out_file": "/var/log/web/out.log"
    },
    {
      "name": "api",
      "cwd": "/app/packages/backend/",
      "script": "server.cjs",
      "env": {
        "NODE_ENV": "production",
        "PORT": "5000"
      },
      "error_file": "/var/log/api/error.log",
      "out_file": "/var/log/api/out.log"
    }
  ]
}
