{
  "name": "orpington-news",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "cross-env NODE_ENV=development lerna run dev --stream --parallel",
    "dev:e2e": "cross-env NODE_ENV=development lerna run dev:e2e --stream --parallel",
    "test": "lerna run test --stream --parallel",
    "build": "lerna run build --stream",
    "audit:fix": "yarn-audit-fix",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "combine:coverage": "sh ./scripts/combine_coverage.sh"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@slonik/migrator": "^0.11.2",
    "cross-env": "^7.0.3",
    "cypress": "^10.3.1",
    "cypress-dark": "^1.8.3",
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "lerna": "^5.4.3",
    "lint-staged": "^13.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "slonik": "^28.1.1",
    "typescript": "^4.7.4",
    "yarn-audit-fix": "^9.3.5"
  },
  "nyc": {
    "report-dir": "cypress-coverage"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "*.{js,cjs,css,md,ts,tsx,json,yml,yaml}": "prettier --write"
  },
  "packageManager": "yarn@3.2.0",
  "version": "0.6.3"
}
